<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>User List</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css"/>
    </head>
    <body>
        <h1>User List</h1>
        <div>
            <nobr>
                <a href="/users/add">Add User</a> |
                <a href="/">Back to Index</a>
            </nobr>
        </div>
        <br/><br/>
        <div>
            <table border="1">
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname year</th>
                </tr>
                {{#users}}
                    <tr>
                                            <td>{{id}}</td>
                                            <td>{{firstname}}</td>
                                            <td>{{lastname}}</td>
                                            <td><a href="/users/{{id}}">details</a></td>
                                        </tr>
                {{/users}}
            </table>
        </div>
        <br/><br/>
        <div>
            <nobr>
                {{#hasPrev}}<a href="/users
                ?page={{prev}}">Prev</a>&nbsp;&nbsp;&nbsp;{{/hasPrev}}
                {{#hasNext}}<a href="/users
                ?page={{next}}">Next</a>{{/hasNext}}
            </nobr>
        </div>
    </body>
</html>